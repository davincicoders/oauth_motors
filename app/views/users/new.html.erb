<div class='jumbotron'>
  <div class='row'>
    <% unless @user.omniauth? %>
      <div class='col-xs-6'>
        <%= image_tag('octocat.png', class: 'img-responsive center-block') %>
        <%= link_to button_tag('Sign up via Github', class: 'btn-auth btn-github center-block'), '/auth/github' %>
      </div>
      <div class='col-xs-6'>
        <h1 class='center-block'>Signup</h1>
        <%= render 'users/form' %>
      </div>
    <% else %>
      <div class='col-sx-10 col-xs-offset-2 center-block'>
        <h1>Verify Details</h1>
      </div>
    <% end %>



    <%= link_to 'Back', root_path %>
  </div>
</div>
